{
  "compilerOptions": {
    /* Defaults */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Paths */
    "baseUrl": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["./node_modules"]
}
